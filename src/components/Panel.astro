---
// src/components/Panel.astro
interface Props {
  variant: 'hero' | 'photography' | 'devroom';
  label: string;
}

const { variant, label } = Astro.props;

const transforms = {
  hero:        'translateZ(0px)',
  photography: 'rotateY(120deg) translateZ(600px)',
  devroom:     'rotateY(-120deg) translateZ(600px)',
};

const colors = {
  hero:        '#f8fafc',
  photography: '#d1fae5',
  devroom:     '#e0e7ff',
};
---

<div
  class="panel"
  data-panel={variant}
  style={`transform: ${transforms[variant]}; background-color: ${colors[variant]};`}
>
  <div class="panel-label">
    {label}
  </div>
  <slot />
</div>

<style>
  .panel {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    backface-visibility: hidden;
  }

  .panel-label {
    font-family: system-ui, sans-serif;
    font-size: 2rem;
    font-weight: 600;
    color: #334155;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    opacity: 0.4;
    user-select: none;
  }
</style>
